<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="1dip"
              android:orientation="vertical"
              android:animateLayoutChanges="true">

<LinearLayout android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="1dip"
              android:animateLayoutChanges="true">

    <androidx.appcompat.widget.AppCompatImageView
            app:srcCompat="@drawable/ic_navigation_first_page"
            android:id="@+id/btn_first"
            style="@style/navButton"/>

    <androidx.appcompat.widget.AppCompatImageView
            app:srcCompat="@drawable/ic_navigation_chevron_left"
            android:id="@+id/btn_prev"
            style="@style/navButton"/>

    <androidx.appcompat.widget.AppCompatImageView
            app:srcCompat="@drawable/ic_navigation_chevron_right"
            android:id="@+id/btn_next"
            style="@style/navButton"/>

    <androidx.appcompat.widget.AppCompatImageView
            app:srcCompat="@drawable/ic_navigation_last_page"
            android:id="@+id/btn_last"
            style="@style/navButton"/>

    <Button
        android:id="@+id/btn_analyze"
        android:text="@string/analyze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_mainline"
        android:text="@string/main_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

    <TextView
        android:id="@+id/statusText"
        android:paddingStart="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end" />

    <Button
        android:id="@+id/btn_play_best"
        android:text="@string/play_best"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

<androidx.appcompat.widget.AppCompatSeekBar
    android:id="@+id/seek_movenum"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    />

</LinearLayout>

